					"name": "GET Verify Event",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "9bf2d717-09be-41a3-9bdc-b6b0a4f14632",
								"exec": [
									"// Parse response JSON",
									"const responseBody = pm.response.json();",
									"console.log('Response Body:', responseBody);",
									"const data = responseBody.data;",
									"",
									"// Test: Status code is 200",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Get expected values from environment",
									"const expectedId = parseInt(pm.environment.get(\"createdEventId\")); // Saved from POST",
									"const expectedName = pm.environment.get(\"eventName\");",
									"const expectedDescription = pm.environment.get(\"eventDescription\");",
									"const expectedLink = pm.environment.get(\"eventLink\");",
									"const expectedDate = pm.environment.get(\"eventDate\");",
									"",
									"// Log expected values",
									"console.log(\"Expected ID:\", expectedId);",
									"console.log(\"Expected Name:\", expectedName);",
									"console.log(\"Expected Description:\", expectedDescription);",
									"console.log(\"Expected Link:\", expectedLink);",
									"console.log(\"Expected Event Date:\", expectedDate);",
									"",
									"// Test: ID matches created event",
									"pm.test(\"Event ID matches created ID\", function () {",
									"    pm.expect(data.id).to.eql(expectedId);",
									"});",
									"",
									"// Test: Name matches",
									"pm.test(\"Event name matches expected\", function () {",
									"    pm.expect(data.name).to.eql(expectedName);",
									"});",
									"",
									"// Test: Description matches",
									"pm.test(\"Event description matches expected\", function () {",
									"    pm.expect(data.description).to.eql(expectedDescription);",
									"});",
									"",
									"// Test: Link matches",
									"pm.test(\"Event link matches expected\", function () {",
									"    pm.expect(data.link).to.eql(expectedLink);",
									"});",
									"",
									"// Test: Event date matches expected",
									"pm.test(\"Event date matches expected\", function () {",
									"    pm.expect(data.eventDate).to.eql(expectedDate);",
									"});",
									"",
									"// SCHEMA VALIDATION (using Ajv)",
									"const Ajv = require('ajv');",
									"const ajv = new Ajv();",
									"",
									"// Define expected JSON schema",
									"const schema = {",
									"    type: \"object\",",
									"    required: [\"data\"],",
									"    properties: {",
									"        data: {",
									"            type: \"object\",",
									"            required: [",
									"                \"id\",",
									"                \"name\",",
									"                \"eventDate\",",
									"                \"description\",",
									"                \"link\",",
									"                \"createdAt\",",
									"                \"createdBy\",",
